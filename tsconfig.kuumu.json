{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    // Module resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // Output settings
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Project settings
    "composite": true,

    // Type checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Other
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true
  }
}
